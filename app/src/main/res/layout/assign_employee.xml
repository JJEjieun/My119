<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignEmployee"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yoongothic"
        android:gravity="center"
        android:text="일반회원가입"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/L3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            //아이디

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textList1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ID"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/yoongothic"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/enterID"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ID를 입력하세요" />

                <Button
                    android:id="@+id/checkID"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="중복확인"
                    android:fontFamily="@font/yoongothic"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            //비밀번호

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textList2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="P/W"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/yoongothic"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/enterPW"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호를 입력하세요" />
            </LinearLayout>

            //이름
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textList3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="이름"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/yoongothic"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/enterName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="이름을 입력하세요" />
            </LinearLayout>

            //생년월일

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textList4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="생년월일"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/yoongothic"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/enterBornDate"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 980101" />
            </LinearLayout>

            //성별

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textList5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="성별"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/yoongothic"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/enterGender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여" />

                    <RadioButton
                        android:id="@+id/enterGender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남" />
                </RadioGroup>
            </LinearLayout>

            //전화번호등록

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textList6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="전화번호"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/yoongothic"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="8자리 핸드폰 번호를 입력하세요" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/enterPhoneNumber"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+8210" />

                    <Button
                        android:id="@+id/checkPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="인증번호받기"
                        android:fontFamily="@font/yoongothic"
                        android:background="@drawable/button_background"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>

            //인증번호 확인

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textAut"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/enterAutNumber"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="인증번호를 입력하세요"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/checkAutNumber"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="인증번호확인"
                    android:visibility="gone" />
            </LinearLayout>

            //주소

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textList7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="주소"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/yoongothic"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="시/도" />

                    <Spinner
                        android:id="@+id/enterAddress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="시/군/구" />

                    <Spinner
                        android:id="@+id/enterAddress2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="동/읍/면" />

                    <Spinner
                        android:id="@+id/enterAddress3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




    //등록버튼
    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv1"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/assignButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="등록" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>