<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignEmployee"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="일반회원가입"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        //아이디
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/enterID"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="ID를 입력하세요"
                android:layout_weight="1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkID"
                android:text="중복확인"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        //비밀번호
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="P/W"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterPW"
                android:hint="비밀번호를 입력하세요" />
        </LinearLayout>

        //이름
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterName"
                android:hint="이름을 입력하세요" />
        </LinearLayout>

        //생년월일
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterBornDate"
                android:hint="ex) 980101" />
        </LinearLayout>

        //성별
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="20dp"
                android:gravity="center" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enterGender1"
                    android:text="여" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enterGender2"
                    android:text="남" />
            </RadioGroup>
        </LinearLayout>

        //전화번호등록
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/enterPhoneNumber"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="ex) 01012345678"
                android:layout_weight="1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkPhoneNumber"
                android:text="인증번호받기"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        //인증번호 확인
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textAut"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/enterAutNumber"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="ex)인증번호를 입력하세요"
                android:visibility="gone"
                android:layout_weight="1"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkAutNumber"
                android:text="인증번호확인"
                android:visibility="gone"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        //주소
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="20dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textList7of1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시/도"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress1" />
            <TextView
                android:id="@+id/textList7of2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시/군/구"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress2"/>
            <TextView
                android:id="@+id/textList7of3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동/읍/면"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress3"/>
        </LinearLayout>

        //사진등록
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            //이미지 입력하는 창으로 바꿔야함.
            <TextView
                android:id="@+id/Image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="이미지등록" />
        </LinearLayout>

        //등록버튼
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/assignButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="등록" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>