<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myRed"
        android:text="공고 등록"
        android:textColor="#ffffff"
        android:textSize="100px"
        app:layout_constraintBottom_toTopOf="@+id/L1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //가게 이름
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="가게 이름"
                        android:textStyle="bold"
                        android:paddingRight="10dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/r_storeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="가게 이름을 입력하세요" />
                </LinearLayout>

                //일급
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="일급"
                        android:textStyle="bold"
                        android:paddingRight="10dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/r_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ex)8500" />
                </LinearLayout>

                //날짜
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="근로 날짜"
                        android:textStyle="bold"
                        android:paddingRight="10dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/r_workDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="근로 날짜를 입력하세요" />
                </LinearLayout>

                //공고마감일
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="공고 마감일"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/r_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ex)200101" />
                </LinearLayout>

                //키워드
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="항목"
                            android:textStyle="bold"
                            android:paddingRight="10dp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="항목을 선택하세요"
                            android:paddingRight="10dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"/>

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="업종" />

                            <Spinner
                                android:id="@+id/enterKey1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="동주소" />

                            <Spinner
                                android:id="@+id/enterKey2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                 android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="시간" />

                            <Spinner
                                android:id="@+id/enterKey3of1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시~"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"/>
                            <Spinner
                                android:id="@+id/enterKey3of2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시"
                                android:paddingLeft="10dp"/>
                        </LinearLayout>

                        //지급방법
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="임금 지급 방법"
                                android:textStyle="bold"
                                android:paddingRight="10dp"
                                android:gravity="center"/>

                            <RadioGroup
                                android:id="@+id/giveMethod"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="현금지급"/>

                                <RadioButton
                                    android:id="@+id/account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="계좌이체"/>
                            </RadioGroup>
                        </LinearLayout>

                        //지급방법
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="면접 방법"
                                android:textStyle="bold"
                                android:paddingRight="10dp"
                                android:gravity="center"/>

                            <RadioGroup
                                android:id="@+id/interview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전화통화"/>

                                <RadioButton
                                    android:id="@+id/fCall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="화상통화"/>

                                <RadioButton
                                    android:id="@+id/fTof"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="면대면"/>
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공고 등록"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="28dp"
        android:text="\@project team3"
        android:textAlignment="center"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L1"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>