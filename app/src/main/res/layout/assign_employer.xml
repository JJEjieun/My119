<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignEmployerActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="기업(사업주)회원가입"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        //아이디
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/enterID"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="ID를 입력하세요"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkID"
                android:text="중복확인"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        //비밀번호
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="P/W"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterPW"
                android:hint="비밀번호를 입력하세요" />
        </LinearLayout>

        //사업자등록번호
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="사업자\n등록번호"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/enterEmployerNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="ID를 입력하세요"
                android:layout_weight="1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkNumber"
                android:text="확인"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        //기업명
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="기업명"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterCompanyName"
                android:hint="기업명을 입력하세요" />
        </LinearLayout>

        //사업주명
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="사업주명"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterEmployerName"
                android:hint="사업주명을 입력하세요" />
        </LinearLayout>

        //주소
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="20dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textList6of1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시/도"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress1" />
            <TextView
                android:id="@+id/textList6of2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시/군/구"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress2"/>
            <TextView
                android:id="@+id/textList6of3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동/읍/면"
                android:textSize="13dp"
                android:gravity="center" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enterAddress3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/endterAddress4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="상세주소를 입력하세요" />

        </LinearLayout>

        //전화번호등록
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterPhoneNumber"
                android:hint="ex) 01012345678" />
        </LinearLayout>

        //이메일등록
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textList8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/enterEmail"
                android:hint="ex) sungshin17@naver.com" />
        </LinearLayout>

        //사진등록
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            //이미지 입력하는 창으로 바꿔야함.
            <TextView
                android:id="@+id/Image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="이미지등록"/>
        </LinearLayout>

        //등록버튼
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/assignButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="등록" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>